class Bufferinstance variablesdata : [nat] := niloperationspublic Buffer: () ==> BufferBuffer() == 	data := nil;public Write: nat ==> ()Write(newData) ==  data := newData;public Read: () ==> natRead() ==  let oldData : nat = data  in    (data := nil;     return oldData;    );public IsFinished: () ==> ()IsFinished() == skip;sync--per Write => #fin(Read) = #fin(Write);--per Read => #fin(Read) = (#fin(Write) +1) and not data = nil;per Write => data = nil;per Read => data <> nil;per IsFinished => #fin(Read) >= 3;end Buffer